[user]
  name = Stefan Frede
  email = stefan@frede.io
  signingkey = 65B04D7D3D9E71E0
[push]
  default = current
[color]
  ui = auto
[alias]
  aa = add --all
  ap = add --patch
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  ci = commit -v
  co = checkout
  pf = push --force-with-lease
  st = status
  lg = log --graph --pretty=colored --abbrev-commit --date=relative
  hist = log --graph --pretty=format:'%h %ad | %s%d [%an]' --date=short
  last = log -1 -p HEAD
  unstage = reset HEAD --
  stats = shortlog -sn --all --no-merges
  recent = for-each-ref --count=10 --sort=-committerdate refs/heads/ --format="%(refname:short)"
  overview = log --all --since='2 weeks' --oneline --no-merges
  recap = log --all --oneline --no-merges --author=stefan@frede.info
  today = log --since=00:00:00 --all --no-merges --oneline --author=stefan@frede.info
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  pager = diff-so-fancy | less --tabs=4 -RFX
  editor = vim
[merge]
  ff = only
[commit]
  template = ~/.gitmessage
  gpgsign = true
[gpg]
  program = /usr/bin/gpg
[fetch]
  prune = true
[rebase]
  autosquash = true
[include]
  path = ~/.gitconfig.local
[diff]
  colorMoved = zebra
  tool = vimdiff
[difftool]
  prompt = false
[pretty]
  colored = format:%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr, %cn)%Creset
[github]
  user = stefanfrede
